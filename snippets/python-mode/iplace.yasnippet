import sys
import fileinput

for line in fileinput.input(sys.argv[1:], inplace=1):

    line = line.expandtabs()  # Expand Tabs
    line = line.rstrip('\r\n \t')  # Remove Trailing Whitespace
    print line  # Convert Line-Endings into Native for the OS Platform
