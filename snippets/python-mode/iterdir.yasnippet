import os.path

from fnmatch import fnmatch

dirname = '.'
for filename in os.listdir(dirname):
    fullname = os.path.join(dirname, filename)

    if fnmatch(filename, '*.pdb'):
        break

    if os.path.isfile(fullname):
        break
